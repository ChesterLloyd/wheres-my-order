{% extends 'base.html.twig' %}

{% block title %}Sign up{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('hero') }}
{% endblock %}

{% block body %}
    {% include 'components/_hero.html.twig' with { title: 'Sign up' } %}

    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-6">
                {{ form_start(form) }}
                    <div class="row mb-2">
                        <div class="col-md-6">
                            {{ form_row(form.firstName) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.lastName) }}
                        </div>
                    </div>

                    <div class="form-outline mb-4">
                        {{ form_row(form.email) }}
                    </div>

                    <div class="form-outline mb-4">
                        {{ form_row(form.password.first) }}
                    </div>

                    <div class="form-outline mb-4">
                        {{ form_row(form.password.second) }}
                    </div>

                    <div class="d-flex justify-content-between mb-4">
                        <a class="btn btn-primary" href="{{ path('app_login') }}">Log in</a>
                        {{ form_widget(form.save) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
