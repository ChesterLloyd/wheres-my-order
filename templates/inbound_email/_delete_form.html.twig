<form class="d-inline-block w-auto px-0 me-2" method="post" action="{{ path('app_inbound_email_delete', {'id': inbound_email.id}) }}" onsubmit="return confirm('Are you sure you want to delete this email?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ inbound_email.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>
