{% extends 'base.html.twig' %}

{% block title %}Password reset{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('hero') }}
{% endblock %}

{% block body %}
    {% include 'components/_hero.html.twig' with { title: 'Reset your password' } %}

    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-6">
                {{ form_start(requestForm, {attr: {novalidate: 'novalidate'}}) }}
                    {{ form_row(requestForm.email) }}

                    <div class="d-flex justify-content-between mb-4">
                        <a class="btn btn-primary" href="{{ path('app_login') }}">Back to login</a>
                        <button class="btn btn-success" type="submit">Continue</button>
                    </div>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
{% endblock %}
