{{ form_start(form) }}
    <div class="row mb-4">
        <div class="col-md-6">
            {{ form_row(form.name) }}

            {{ form_row(form.description) }}

            <div class="row">
                <div class="col-md-5">
                    {{ form_row(form.amount) }}
                </div>
                <div class="col-md-5">
                    {{ form_row(form.currency) }}
                </div>
                <div class="col-md-2">
                    {{ form_row(form.quantity) }}
                </div>
            </div>

            <div class="d-flex justify-content-between mt-2 mb-4">
                <a class="btn btn-primary w-auto me-2" href="{{ path('app_purchase_show', {'id': item.purchase.id}) }}">Back to order</a>
                <button class="btn btn-success w-auto me-2">{{ button_label|default('Save') }}</button>
            </div>
        </div>
    </div>

{{ form_end(form) }}
