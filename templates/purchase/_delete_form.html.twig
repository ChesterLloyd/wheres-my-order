<form class="d-inline-block w-auto px-0 me-2" method="post" action="{{ path('app_purchase_delete', {'id': purchase.id}) }}" onsubmit="return confirm('Are you sure you want to delete this order?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ purchase.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>
